<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_header_word"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="?attr/bottombar_bg"
    tools:ShowIn="@layout/activity_search">

    <TextView
        android:id="@+id/search_feeds_result_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:gravity="center"
        android:text="@string/search_cloudy_feeds_result_count"
        android:textColor="?attr/lv_item_desc_color" />

    <!--android:layout_below="@id/search_feeds_result_count"-->
    <View
        android:id="@+id/search_list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="?attr/lv_item_divider" />
</LinearLayout>