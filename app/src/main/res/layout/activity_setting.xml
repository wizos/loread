            <TextView
                style="@style/SettingItemHeader"
                android:text="@string/other" />

            <LinearLayout
                android:id="@+id/setting_auto_toggle_theme"
                style="@style/SettingItem"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/setting_auto_toggle_theme_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/SettingItemTitle2"
                    android:text="@string/setting_auto_toggle_theme_title" />
                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/setting_auto_toggle_theme_sb"
                    style="@style/SwitchButtonStyle"
                    android:onClick="onSBClick"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_link_open_mode"
                style="@style/SettingItem">
                <TextView
                    android:id="@+id/setting_link_open_mode_title"
                    style="@style/SettingItemTitle2"
                    android:text="@string/open_link_by_builtin_browser" />
                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/setting_link_open_mode_sb"
                    style="@style/SwitchButtonStyle"
                    android:checked="false"
                    android:onClick="onSBClick" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_clear_day"
                android:onClick="showClearBeforeDay"
                style="@style/SettingItem">
                <TextView
                    android:id="@+id/setting_clear_day_title"
                    style="@style/SettingItemTitle2"
                    android:text="@string/setting_clear_day_title" />
                <TextView
                    android:id="@+id/setting_clear_day_summary"
                    style="@style/SettingItemSummary"
                    tools:text="10 天" />
            </LinearLayout>

            <TextView
                style="@style/SettingItemHeader"
                android:text="@string/data" />
            <LinearLayout
                android:id="@+id/setting_import_opml"
                style="@style/SettingItem"
                android:onClick="importOPML">
                <TextView
                    android:id="@+id/setting_import_opml_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/SettingItemTitle2"
                    android:text="@string/import_opml" />
                <TextView
                    android:id="@+id/setting_import_opml_summary"
                    style="@style/SettingItemSummary"
                    tools:text="" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_export_opml"
                style="@style/SettingItem"
                android:onClick="exportOPML">
                <TextView
                    android:id="@+id/setting_export_opml_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/SettingItemTitle2"
                    android:text="@string/export_opml" />
                <TextView
                    android:id="@+id/setting_export_opml_summary"
                    style="@style/SettingItemSummary"
                    tools:text="" />
            </LinearLayout>


            <TextView
                style="@style/SettingItemHeader"
                android:text="@string/rules" />

            <LinearLayout
                android:id="@+id/setting_rule_update"
                style="@style/SettingItem"
                android:onClick="openActionManager">
                <TextView
                    android:id="@+id/setting_rule_update_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/SettingItemTitle2"
                    android:text="@string/rules_management" />
                <TextView
                    android:id="@+id/setting_rule_update_summary"
                    style="@style/SettingItemSummary"
                    tools:text="" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/setting_enable_url_rewrite"
                style="@style/SettingItem"
                android:onClick="openTestUrlRewrite">
                <TextView
                    android:id="@+id/setting_enable_url_rewrite_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/SettingItemTitle2"
                    android:text="@string/url_rewrite_configure_and_test" />
                <TextView
                    android:id="@+id/setting_url_rewrite_summary"
                    style="@style/SettingItemSummary"
                    tools:text="" />
            </LinearLayout>

