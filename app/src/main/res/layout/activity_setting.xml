            <LinearLayout
                android:id="@+id/setting_enable_check_app_update"
                style="@style/SettingItem"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/setting_enable_check_app_update_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/SettingItemTitle2"
                    android:text="@string/check_app_update" />
                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/setting_enable_check_app_update_sb"
                    style="@style/SwitchButtonStyle"
                    android:onClick="onSBClick"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_enable_log"
                style="@style/SettingItem"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/setting_enable_log_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/SettingItemTitle2"
                    android:text="@string/enable_logging" />
                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/setting_enable_log_sb"
                    style="@style/SwitchButtonStyle"
                    android:onClick="onSBClick"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_send_log_file"
                style="@style/SettingItem"
                android:onClick="onClickSendLogFile"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/setting_send_log_file_title"
                    style="@style/SettingItemTitle2"
                    android:text="@string/send_log_file" />
                <TextView
                    android:id="@+id/setting_send_log_file_summary"
                    style="@style/SettingItemSummary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_join_qqgroup"
                style="@style/SettingItem"
                android:onClick="joinQQGroup"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/setting_join_qqgroup_title"
                    style="@style/SettingItemTitle2"
                    android:text="@string/qq_group" />
                <TextView
                    android:id="@+id/setting_join_qqgroup_summary"
                    style="@style/SettingItemSummary"
                    android:text="@string/qq_group_number" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_feedback"
                style="@style/SettingItem"
                android:visibility="gone"
                android:onClick="onClickFeedback"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/setting_feedback_title"
                    style="@style/SettingItemTitle2"
                    android:text="@string/feedback" />
                <TextView
                    android:id="@+id/setting_feedback_summary"
                    style="@style/SettingItemSummary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_about"
                style="@style/SettingItem"
                android:onClick="showAbout"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/setting_about_title"
                    style="@style/SettingItemTitle2"
                    android:text="@string/about" />
                <TextView
                    android:id="@+id/setting_about_summary"
                    style="@style/SettingItemSummary" />
            </LinearLayout>

            <TextView
                tools:visibility="visible"
                android:visibility="gone"
                android:id="@+id/setting_lab"
                android:textSize="18sp"
                android:textColor="@color/material_red_400"
                style="@style/SettingItem"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:text="@string/lab"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/setting_switch_user"
                android:textSize="18sp"
                android:textColor="@color/material_red_400"
                style="@style/SettingItem"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:onClick="onClickSwitchUser"
                android:text="@string/switch_account"
                android:background="?android:attr/selectableItemBackground" />
